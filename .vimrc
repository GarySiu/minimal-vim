" line numbers
set number
" syntax highlighting and colorscheme
syntax enable
colorscheme monokai
" tabs should be 2 spaces
set tabstop=2
set shiftwidth=2
set expandtab
set autoindent
" enable fuzzy finding
set path+=**
" show wildcard completions with tab/shift tab selection
set wildmenu
set listchars=tab:→\ ,space:·,nbsp:␣,trail:•,eol:¶,precedes:«,extends:»
